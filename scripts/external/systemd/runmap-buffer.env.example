# Copy to /etc/runmap/runmap-buffer.env and fill values

# Connect via Supabase Session Pooler (IPv4) for long jobs
PGHOST=aws-1-us-west-1.pooler.supabase.com
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres.<project-ref>
PGPASSWORD=REPLACE_WITH_DB_PASSWORD

# Geometry tuning
SIMPLIFY_TOLERANCE_M=10.0
SNAP_GRID_M=1.0

# Auto-refresh dependents after upload (streets_unrun, coverage_stats)
REFRESH_AFTER=1
