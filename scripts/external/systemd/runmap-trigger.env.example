# Env for the RunMap trigger webhook
# Copy to /etc/runmap/runmap-trigger.env and set a strong token. 600 perms.

# Secret token required in header X-Runmap-Token or query ?token=
RUNMAP_TRIGGER_TOKEN=REPLACE_WITH_RANDOM_LONG_TOKEN
# Listen address and port (default 127.0.0.1:8081)
RUNMAP_TRIGGER_LISTEN=127.0.0.1:8081
# Name of the buffer service to start
RUNMAP_BUFFER_SERVICE=runmap-buffer.service
